tidylearn/
├── R/
│   ├── core.R                  # Core functionality and shared utilities
│   ├── regression.R            # Linear, polynomial regression functions
│   ├── classification.R        # Logistic regression and classification metrics
│   ├── trees.R                 # Decision trees, random forests, boosting
│   ├── regularization.R        # Ridge, Lasso, Elastic Net
│   ├── svm.R                   # Support Vector Machines
│   ├── neural_networks.R       # Neural Networks functionality
│   ├── deep_learning.R         # Deep Learning wrappers
│   ├── metrics.R               # Evaluation metrics
│   ├── visualization.R         # Plotting functions
│   └── utils.R                 # Helper functions
├── tests/
│   ├── testthat.R              # Main test file
│   └── testthat/               # Unit tests
│       ├── test-core.R         # Tests for core functions
│       ├── test-regression.R   # Tests for regression models
│       ├── test-classification.R # Tests for classification models
│       ├── test-tree-models.R  # Tests for tree-based models
│       ├── test-svm-nn.R       # Tests for SVM and neural networks
│       ├── test-metrics.R      # Tests for evaluation metrics
│       ├── test-visualization.R # Tests for visualization functions
│       └── test-utils.R        # Tests for utility functions
├── man/                        # Documentation (generated by roxygen2)
├── data/                       # Example datasets
├── vignettes/                  # Usage examples
│   ├── vignette-regression.Rmd # Regression vignette
│   └── vignette-classification.Rmd # Classification vignette
├── inst/                       # Installed files
│   ├── demo-script.R           # Complete workflow demonstration script
│   └── run-tests.R             # Comprehensive test runner script
├── .github/                    # GitHub configurations
│   └── workflows/              # GitHub Actions workflows
│       ├── R-CMD-check.yaml    # R CMD check workflow
│       └── test-coverage.yaml  # Code coverage workflow
├── DESCRIPTION                 # Package metadata
├── NAMESPACE                   # Package namespace definitions (generated)
├── README.md                   # Package overview
├── _pkgdown.yml                # pkgdown configuration
└── tidylearn-cheatsheet.qmd    # Quarto cheat sheet
